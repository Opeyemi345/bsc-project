# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
HOSTED_DB_URI=mongodb://localhost:27017/gig_social

# JWT Configuration
SERVER_SECRET=your-super-secret-jwt-key-here

# Frontend Configuration
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Email Configuration (Gmail OAuth2)
MAIL_USER=your-email@gmail.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Alternative Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration (if using cloud storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 Configuration (alternative)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
